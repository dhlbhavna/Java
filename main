import java.lang.Math;
public class Main{
  public static void main (String args[]){
		Point [] arr = new Point[5];
		arr[0] = new Point(3,1);
		arr[1] = new Point(2,2);
		arr[2] = new Point(4,2);
		arr[3] = new Point(1,5);
		arr[4] = new Point(2,1);
	
		Polygon p1 = new Polygon(arr);
	
		double result = p1.perimeter();
		System.out.println("The perimeter of the polygon is "+result);
	}
	
}
